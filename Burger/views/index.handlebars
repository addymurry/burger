<div class="container-fluid">
    <img src="/public/assets/images/burger.jpg" width="200px">

    <div class="card">
        <h1>Devour the Burger!</h1>
    </div>

    <div class="container-fluid">
        <div class="card">

            <h2>Burgers</h2>

            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.burger_name}}
                <button type="button" class="burgerYum" id={{this.id}}>Devour</button>
            </li>
            {{/unless}}
            {{/each}}

        </div>

        <div class="card">
            <h2>Burgers Devoured</h2>

            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}

        </div>
    </div>




    <div class="container-fluid">
        <div class="card">

            <h2>Add A Burger</h2>

            <form class="create-update-form" action="/burgers" method="POST">

                <div class="form-group">
                    <input type="text" id="ca" name="burger_name" placeholder="Burger">
                </div>

                <button class="btn-primary" type="submit">Burger Name</button>
                
            </form>

        </div>
    </div>
</div>